<%= form_tag("/", method: "get") do %>
<p>
  <%= label_tag(:searchword, "Search for:") %>
  <%= search_field_tag(:searchword) %>
  <%= submit_tag("Search") %>
</p>
<% end %>

<% if @products %>
  <% @products.each do |product| %>
  <p>
    <strong><%= product.name %></strong>
    <%= number_to_currency(product.price) %><br>
    <%= product.description %>
  </p>
  <% end %>
<% end %>
